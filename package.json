{
  "name": "recorder",
  "version": "0.0.1",
  "description": "CSS-free, pure HTML+TypeScript+JavaScript browser-based audio recorder without a server",
  "main": "index.html",
  "scripts": {
    "dev": "vite",
    "build": "vite build && node scripts/combine-html.js",
    "preview": "vite preview",
    "test": "vitest",
    "test:run": "vitest run",
    "test:ui": "vitest --ui",
    "lint": "biome check src/",
    "lint:fix": "biome check --apply src/",
    "format": "biome format --write src/",
    "start": "vite preview",
    "docs": "typedoc --options typedoc.json"
  },
  "keywords": [
    "audio",
    "recorder",
    "web-audio-api",
    "mediarecorder-api",
    "transcription",
    "translation",
    "serverless"
  ],
  "author": "olegzai",
  "license": "MIT",
  "devDependencies": {
    "@biomejs/biome": "^2.3.14",
    "@types/jest": "^29.5.0",
    "@types/node": "^18.15.0",
    "@typescript-eslint/eslint-plugin": "^5.55.0",
    "@typescript-eslint/parser": "^5.55.0",
    "@vitejs/plugin-vue": "^6.0.4",
    "@vue/runtime-core": "^3.5.28",
    "@vue/test-utils": "^2.4.6",
    "chokidar": "^3.5.3",
    "eslint": "^8.36.0",
    "express": "^4.18.2",
    "jest": "^29.5.0",
    "jsdom": "^28.0.0",
    "serve": "^14.2.0",
    "ts-jest": "^29.1.0",
    "typedoc": "^0.28.16",
    "typescript": "^5.9.3",
    "vite": "^7.3.1",
    "vitest": "^4.0.18",
    "vue": "^3.5.28"
  },
  "dependencies": {
    "pino": "^10.3.1",
    "pino-pretty": "^13.1.3"
  }
}
